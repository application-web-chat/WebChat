<body>
    <header>
        <h1>Messagerie</h1>
        <!--ajt lien vers la page profil-->
    </header>
    <div class="grid">
        <div class="users">
            <h3>Membres</h3>
            <div style="margin: 30px;">
                <table class="table table-bordered table-striped">
                    <thead>
                        <tr>
                            <th scope="col">#Id</th>
                            <th scope="col">Nom</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% for(var i=0; i < users.length; i++) { %>
                        <tr>

                            <td>
                                <div><%= users[i].id %></div>
                            </td>
                            <td><%= users[i].name %></td>
                        </tr>
                        <% } %>
                    </tbody>
                </table>
            </div>
        </div>
        <div class="message">
            <h3>Derniers messages</h3>
            <!-- ajt messages ici-->
            <div class="alert alert-primary" role="alert">
